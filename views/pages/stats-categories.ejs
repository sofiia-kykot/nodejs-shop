<%- include('../partials/header', { title: title }) %>

<div class="container mx-auto px-4 sm:px-8 max-w-5xl py-8">

    <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold text-gray-800"><%= title %></h2>
    </div>

    <% if (data && data.length > 0) { %>

        <div class="bg-white shadow-md rounded-lg p-6 mb-8 border-t-4 border-black">
            <h3 class="text-lg font-medium text-gray-900 mb-4 border-b pb-2">Revenue Distribution</h3>
            <div class="relative h-96 w-full flex justify-center">
                <canvas id="categoryChart"></canvas>
            </div>
        </div>

        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <div class="p-6 border-b pb-2">
                <h3 class="text-lg font-medium text-gray-900">Detailed Data</h3>
            </div>

            <div class="overflow-x-auto">
                <table class="min-w-full leading-normal">
                    <thead>
                    <tr>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Category Name
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Products Count
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Sold Qty
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            Total Revenue
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <% data.forEach(item => { %>
                        <tr>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                <div class="font-bold text-gray-900"><%= item.category_name || 'Uncategorized' %></div>
                            </td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-center text-gray-500">
                                <%= item.product_count %>
                            </td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-center">
                                    <span class="bg-gray-100 text-gray-800 py-1 px-3 rounded-full text-xs font-bold">
                                        <%= item.sold_qty %>
                                    </span>
                            </td>
                            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-right font-bold text-green-600">
                                <%= Number(item.total_revenue).toFixed(2) %> â‚´
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <script>
            const categoryData = <%- JSON.stringify(data) %>;

            window.addEventListener('load', () => {
                if (window.helpers && window.helpers.initCategoryChart) {
                    window.helpers.initCategoryChart(categoryData);
                }
            });
        </script>

    <% } else { %>
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
            <div class="flex">
                <div class="ml-3">
                    <p class="text-sm text-yellow-700">
                        No sales data available for categories yet.
                    </p>
                </div>
            </div>
        </div>
    <% } %>

</div>

<%- include('../partials/footer') %>